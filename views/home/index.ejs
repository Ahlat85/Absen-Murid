<%- include("../components/head"); %>
<body>
	<div id="content" class="container">
		<div class="row text-center">
			<div class="col-sm-12">
				<h1>Databases</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-12">
				<button class="btn btn-primary">Tambahkan Database</button>
			</div>
		</div>
		<div class="row mt-sm-3">
			<div class="col-sm-12">
				<table class="table table-dark table-hover">
					<caption class="text-white">Databases</caption>
					 <thead>
					    <tr>
					      <th scope="col">#</th>
					      <th scope="col">Name</th>
					      <th scope="col">More</th>
					    </tr>
					  </thead>
					  <tbody>
					  	<% if (body.databases != null) { %>
						    <% for (let i = 0; i < body.databases.length; i++) { %>
		                        <tr>
		                            <th scope="row">
		                                <%= i + 1 %>
		                            </th>
		                            <th class="name">
		                                <%= body.databases[i] %>
		                            </th>
		                            <th>
		                            	<a class="btn btn-primary" href="/home/<%= body.databases[i] %>"><i class="bi bi-three-dots"></i> Detail</a>
		                            </th>
		                        </tr>
							<% } %>
						<% } %>
					  </tbody>
				</table>
			</div>
		</div>
	</div>
</body>